#homeSlider
	=image_tag "panorama.jpg"
	=image_tag "panorama2.jpg"
	=image_tag "panorama3.jpg"

#homeFeatured
	#col1.three.columns
		%a{href:'#', id: 'avidLink'}
		=image_tag "avid-logo.png", :id => "avidLogo"
	#col2.five.columns
		%h3 This Spot is Reserved for Copy Text
		%p Then again, on second thought, it might be beneficial to have a list of upcoming events? Or maybe information about a single event, complete with a link to ticket purchase.
		%p You could also use this area for featured products, a westlake pro twitter feed, really anything. The possibilities are endless.
	#col3.four.columns
		%h3 Send Us a Message
		%form
			%input.input1{placeholder:'Your Name'}
			%input.input1{placeholder:'Your Email'}
			%textarea{placeholder:'Your Message'}
			%input{type:'submit', value:'Submit'}

=content_for :scripts do
	:javascript
		$(function() {
			$('#homeSlider').orbit({
					animationSpeed: 1200,
					advanceSpeed: 6000,
				});
		});