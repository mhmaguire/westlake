#homePage
  #homeSlider
    #slide1.homeSlide
    #slide2.homeSlide
  //  =render partial: 'shared/home_page_slide', collection: @content.home_page_slides
  #homeFeatured
    %p#homeCopy
    #homeImages
      = image_tag("http://placehold.it/650x150", :id => "homeImage1", :class => "six columns")
      = image_tag("http://placehold.it/650x150", :id => "homeImage2", :class => "six columns")

  =content_for :scripts do
    :javascript
      $(function() {
        $('#homeSlider').orbit({
          animation: "fade",
          animationSpeed: 1200,
          advanceSpeed: 10000,
          directionalNav: false,
          bulletThumbs: false,
        });
      });

    :javascript
      $(window).ready(function(){
        var slideWidth = $("#homeSlider").width();

        if(slideWidth > 1700) {$(".homeSlide").css("backgroundSize", "100%");}
      });

      $(window).resize(function(){
        var slideWidth = $("#homeSlider").width();

        if(slideWidth > 1700) {$(".homeSlide").css("backgroundSize", "100%");}
        else if(slideWidth < 1700) {$(".homeSlide").css("backgroundSize", "auto");}
      });