#galleryPage.staticPage
	.staticContent
		.featImage
			%h2 Gallery Featured Image
			-unless @feat_img.nil?
				=image_tag @feat_img.image.url(:large)
		%ul.wpGallery.block-grid.four-up(data-clearing=true)
			=render partial: 'shared/gallery_image', collection: @gallery_images
			
=content_for :scripts do 
	:javascript
		$(function() {
			var retina = window.devicePixelRatio > 1; 
			if(retina) {
				var $links = $('ul.wpGallery a'), 
				string = '';
				$links.each(function(){
					string = $(this).attr('href').replace('.jpg', '@2x.jpg');
					$(this).attr('style', string);
				});
			};
		});
			
		

